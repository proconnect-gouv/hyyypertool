{
  "name": "hyyypertool",
  "version": "2026.2.10",
  "private": true,
  "type": "module",
  "engines": {
    "node": "24.11.0"
  },
  "workspaces": [
    "bin",
    "sources/config/*",
    "sources/core",
    "sources/identite-proconnect",
    "sources/moderations",
    "sources/organizations",
    "sources/web",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:bun",
    "build:bun": "cd bin && bun run build",
    "database:identite-proconnect:migrator": "bun run database:identite-proconnect:run migration",
    "database:identite-proconnect:run": "bun run --cwd sources/identite-proconnect",
    "database:identite-proconnect:seed": "bun run database:identite-proconnect:run seed",
    "dev": "cd bin && bun run dev",
    "dev:inspect-brk": "tsx --inspect-brk bin/src/index.ts",
    "e2e:install": "cd e2e && bun install",
    "e2e:run": "cd e2e && bun run",
    "fixtures:load": "bun run database:identite-proconnect:migrator && bun run database:identite-proconnect:seed",
    "format": "bun x prettier --check .",
    "format:fix": "bun x prettier --log-level silent --write .",
    "format:pkg": "bun x sort-package-json ./package.json ./sources/*/package.json ./sources/*/*/package.json ./e2e/package.json",
    "format:tsconfig": "bun x @monorepo-utils/workspaces-to-typescript-project-references && prettier --log-level silent --write **/tsconfig.json",
    "postadd": "bun run format:tsconfig",
    "renovate": "bun x npm-check-updates --packageManager bun --interactive --upgrade --deep",
    "start": "tsx --import ./bin/src/node/instrument.ts bin/src/node/index.ts",
    "studio:identite-proconnect": "bun run database:identite-proconnect:run studio",
    "test": "bun run format && bun run test:type-check && bun run test:all",
    "test:all": "bun test",
    "test:inspect": "bun test --inspect-wait=localhost:6499/",
    "test:type-check": "bun x tsc --build"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-gherkin",
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "tv"
    ],
    "tailwindPreserveWhitespace": true
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.14.3",
    "@preact/signals": "2.7.1",
    "@preact/signals-core": "1.13.0",
    "@tsconfig/bun": "1.0.10",
    "@~/bin": "workspace:*",
    "animate.css": "4.1.1",
    "dotenv": "17.3.1",
    "htmx-ext-include-vals": "2.0.2",
    "htmx-ext-sse": "2.2.4",
    "htmx.org": "2.0.8",
    "hyperscript.org": "0.9.14",
    "nprogress": "0.2.0",
    "preact": "10.28.3",
    "tsx": "4.21.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@csmith/release-it-calver-plugin": "2023.12.0",
    "@testing-library/preact": "3.2.4",
    "@types/bun": "1.3.9",
    "hono": "4.12.2",
    "htmx-ext-debug": "2.0.2",
    "prettier": "3.8.1",
    "prettier-plugin-gherkin": "3.1.3",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "release-it": "19.2.4",
    "typescript": "5.9.3"
  },
  "release-it": {
    "git": {
      "commitMessage": ":bookmark: release ${version}"
    },
    "github": {
      "comments": {
        "submit": true
      },
      "release": true
    },
    "hooks": {
      "before:release": "bun x prettier --write package.json CHANGELOG.md && git add package.json CHANGELOG.md",
      "after:git:release": "git switch -c release/${version} && git push origin release/${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@csmith/release-it-calver-plugin": {
        "format": "yyyy.mm.minor"
      },
      "./packages/release-it-gitmoji-changelog-plugin": {
        "infile": "CHANGELOG.md"
      },
      "./packages/release-it-changeset-plugin": {}
    }
  }
}

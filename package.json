{
  "name": "hyyypertool",
  "version": "2026.2.3",
  "private": true,
  "type": "module",
  "workspaces": [
    "bin",
    "sources/config/*",
    "sources/core",
    "sources/identite-proconnect",
    "sources/moderations",
    "sources/organizations",
    "sources/web",
    "packages/*"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "db:migrate": "bun scripts/db/migrate.ts",
    "db:reset": "bun scripts/db/seed.ts",
    "db:seed": "bun scripts/db/seed.ts",
    "db:studio": "bun scripts/db/studio.ts",
    "dev": "bun scripts/dev.ts",
    "format": "bun scripts/format.ts",
    "format:fix": "bun scripts/format.ts --fix",
    "start": "tsx --tsconfig tsconfig.json bin/src/node/index.ts",
    "test": "bun scripts/test.ts"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-gherkin",
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "tv"
    ],
    "tailwindPreserveWhitespace": true
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.14.3",
    "@preact/signals": "2.6.1",
    "@preact/signals-core": "1.12.2",
    "@tsconfig/bun": "1.0.10",
    "@~/bin": "workspace:*",
    "animate.css": "4.1.1",
    "dotenv": "17.2.3",
    "htmx-ext-include-vals": "2.0.2",
    "htmx-ext-sse": "2.2.4",
    "htmx.ext...chunked-transfer": "2.3.0",
    "htmx.org": "2.0.8",
    "hyperscript.org": "0.9.14",
    "nprogress": "0.2.0",
    "preact": "10.28.2",
    "tsx": "4.21.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@~/config.bun-plugin-client-scripts": "workspace:*",
    "@csmith/release-it-calver-plugin": "2023.12.0",
    "@testing-library/preact": "3.2.4",
    "@types/bun": "1.3.6",
    "hono": "4.11.7",
    "htmx-ext-debug": "2.0.2",
    "prettier": "3.8.1",
    "prettier-plugin-gherkin": "3.1.3",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "release-it": "19.2.4",
    "typescript": "5.9.3"
  },
  "release-it": {
    "git": {
      "commitMessage": ":bookmark: release ${version}"
    },
    "github": {
      "comments": {
        "submit": true
      },
      "release": true
    },
    "hooks": {
      "before:release": "bun x prettier --write package.json CHANGELOG.md && git add package.json CHANGELOG.md",
      "after:git:release": "git switch -c release/${version} && git push origin release/${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@csmith/release-it-calver-plugin": {
        "format": "yyyy.mm.minor"
      },
      "./packages/release-it-gitmoji-changelog-plugin": {
        "infile": "CHANGELOG.md"
      },
      "./packages/release-it-changeset-plugin": {}
    }
  }
}

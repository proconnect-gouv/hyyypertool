{
  "name": "@~/bin",
  "version": "2025.9.0",
  "private": true,
  "type": "module",
  "bin": {
    "hyyypertool-node": "./src/node/index.ts",
    "hyyypertool-bun": "./src/bun/index.ts"
  },
  "scripts": {
    "build": "bun run ./build.ts",
    "clean": "rm -rf node_modules/.cache/tsc public/built",
    "dev": "bun run ./dev.ts",
    "dev:bun": "bun run --hot src/bun/index.ts",
    "start": "bun run src/bun/index.ts",
    "start:node": "tsx --import ./src/node/instrument.ts src/node/index.ts",
    "start:bun": "bun run src/bun/index.ts"
  },
  "dependencies": {
    "@hono/node-server": "1.19.9",
    "@sentry/node": "10.39.0",
    "@sentry/profiling-node": "10.39.0",
    "@tailwindcss/cli": "4.2.0",
    "@tailwindcss/typography": "0.5.19",
    "@~/web": "workspace:*",
    "@~/core": "workspace:*",
    "dotenv-flow": "4.1.0",
    "consola": "3.4.2",
    "hono": "4.12.2",
    "tailwindcss": "4.2.0",
    "tsx": "4.21.0"
  },
  "devDependencies": {
    "@~/config.bun-plugin-client-scripts": "workspace:*",
    "@~/config.tailwindcss": "workspace:*",
    "@~/config.typescript": "workspace:*"
  }
}
